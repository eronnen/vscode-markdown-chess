{
  "name": "vscode-markdown-chess",
  "displayName": "vscode-markdown-chess",
  "description": "Display chess boards in vscode builtin markdown preview",
  "version": "0.1.0",
  "license": "GPL-3.0-or-later",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "markdown.markdownItPlugins": true,
    "markdown.previewScripts": [
      "./dist/markdownPreview.bundle.js"
    ],
    "markdown.previewStyles": [
      "./dist/markdownPreview.css"
    ],
    "configuration": {
      "title": "Markdown Chess",
      "properties": {
        "markdown-chess.boardTheme": {
          "order": 0,
          "type": "string",
          "enum": [
            "blue",
            "brown",
            "green",
            "ic",
            "purple"
          ],
          "default": "brown",
          "description": "Default board theme for chess in markdown"
        },
        "markdown-chess.pieceSet": {
          "order": 1,
          "type": "string",
          "enum": [
            "alpha",
            "cburnett",
            "merida"
          ],
          "default": "cburnett",
          "description": "Default piece set for chess in markdown"
        }
      }
    },
    "commands": [
      {
        "command": "markdown-chess.openSettings",
        "title": "Markdown: Open Chess Settings"
      }
    ]
  },
  "scripts": {
    "compile": "webpack --mode production --config ./webpack/extension.webpack.config.ts && webpack --mode production --config ./webpack/markdownPreview.webpack.config.ts",
    "watch": "webpack --watch --config ./webpack/extension.webpack.config.ts",
    "package": "webpack --mode production --devtool hidden-source-map --config ./webpack/extension.webpack.config.ts",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "test": "node ./out/test/runExtensionsTest.js",
    "premarkdowntest": "npm run compile-tests && npm run compile && npm run lint && cp ./src/test/suite/*.txt ./out/test/suite/",
    "markdowntest": "mocha --file ./out/test/runMarkdownTest.js",
    "vscode:prepublish": "npm run package"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/markdown-it": "^12.2.3",
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.18.11",
    "@types/vscode": "^1.74.0",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "chessground": "^8.3.6",
    "chessops": "^0.12.5",
    "css-loader": "^6.7.3",
    "css-minimizer-webpack-plugin": "^4.2.2",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "markdown-it": "^13.0.1",
    "markdown-it-testgen": "^0.1.6",
    "mini-css-extract-plugin": "^2.7.2",
    "mocha": "^10.1.0",
    "sass": "^1.57.1",
    "sass-loader": "^13.2.0",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  }
}
